# Flask configuration (development)
FLASK_ENV=development
FLASK_DEBUG=1

# PostgreSQL configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me
POSTGRES_DB=ecommerce
POSTGRES_HOST=localhost
